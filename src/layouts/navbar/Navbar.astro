---
import { themes } from '@types/themes.ts';
---

<div class="navbar">
	<div class="navbar-start">
		<label
			for="my-drawer"
			class="btn btn-circle swap swap-rotate bg-transparent border-none hidden"
		>
			<!-- this hidden checkbox controls the state -->
			<input type="checkbox" />

			<!-- hamburger icon -->
			<svg
				class="swap-off fill-current"
				xmlns="http://www.w3.org/2000/svg"
				width="32"
				height="32"
				viewBox="0 0 512 512"
				><path
					d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"
				></path>
			</svg>

			<!-- close icon -->
			<svg
				class="swap-on fill-current"
				xmlns="http://www.w3.org/2000/svg"
				width="32"
				height="32"
				viewBox="0 0 512 512"
				><polygon
					points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"
				>
				</polygon>
			</svg>
		</label>
	</div>

	<div class="navbar-center">
		<a class="btn btn-ghost normal-case text-xl" href="/">Tudoehpureza</a>
	</div>

	<div class="navbar-end">
		<div class="dropdown dropdown-end mr-3 text-sm rounded-full">
			<label
				tabindex="0"
				class="btn btn-ghost btn-circle avatar ring ring-primary"
			>
				<div class="w-16 rounded-full bg-neutral-focus text-neutral-content">
					<img
						src="https://daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg"
					/>
					{/*<span class="text-xl">AA</span>*/}
				</div>
			</label>
			<ul
				tabindex="0"
				class="menu dropdown-content p-2 shadow bg-base-200 rounded-box w-52 z-[100]"
			>
				<li class="mt-1">
					<a href="/front-domains/sign-in">Logout</a>
				</li>
				<li class="mt-1">
					<a href="/front-domains/profile">Profile</a>
				</li>
				<li class="mt-1">
					<select
						data-choose-theme
						class="select select-accent w-full max-w-xs"
					>
						<option disabled value="">Pick a Theme</option>
						{
							themes.map(({ theme, mode }) => (
								<option value={theme} data-mode={mode}>
									{theme}
								</option>
							))
						}
					</select>
				</li>
			</ul>
		</div>
	</div>
</div>

<script>
	// Find all buttons with the `alert` class on the page.
	const select = document.querySelector('select');

	select?.addEventListener('change', (event) => {
		const selectElement = event.target as HTMLSelectElement;
		const selectedIndex = selectElement.selectedIndex;
		const selectedOption = selectElement.options[selectedIndex];

		const mode = selectedOption.dataset.mode;

		console.log('mode ===> ', mode);

		if (!mode || mode === localStorage.getItem('theme')) return;

		localStorage.setItem('mode', mode);
		window.dispatchEvent(new Event('storage'));
	});
</script>
